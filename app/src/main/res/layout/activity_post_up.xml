<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    tools:context=".PostUpActivity">

    <Button
        android:id="@+id/makePostBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="등록하기" />

    <Button
        android:id="@+id/readBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="읽기" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/makePostBtn">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp">
            <EditText
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:hint="제목"/>

            <Spinner
                android:id="@+id/subscriptSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleText"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="0dp" />

            <TextView
                android:id="@+id/textSubscript"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_below="@id/titleText"
                android:text="행사 종류"
                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@id/textSubscript"/>

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/textSubscript"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="행사 기간"
                android:textColor="#000" />


            <RelativeLayout
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDate"
                android:layout_marginBottom="10dp">

                <!--
                <DatePicker
                    android:id="@+id/startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"/>

                <DatePicker
                    android:id="@+id/finishDate"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_below="@id/startDate"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"/>
                    -->

                <Button
                    android:id="@+id/startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023년 06월 10일" />

                <Button
                    android:id="@+id/endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="2023년 06월 10일" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/startDate"
                    android:layout_toStartOf="@id/endDate"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:text="-->"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@id/datePicker"/>

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/datePicker"
                android:gravity="center_vertical"
                android:text="운영 시간"
                android:textColor="#000" />

            <RelativeLayout
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTime"
                android:layout_marginBottom="12dp">

                <!--
                <DatePicker
                    android:id="@+id/startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"/>

                <DatePicker
                    android:id="@+id/finishDate"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_below="@id/startDate"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"/>
                    -->

                <Button
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오전 8:00" />

                <Button
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="오후 12:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/startTime"
                    android:layout_toStartOf="@id/endTime"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:text="-->"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"
                android:layout_below="@id/timePicker"/>


            <EditText
                android:id="@+id/imageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/imgBtn"
                android:layout_below="@id/mapBtn"
                android:layout_marginVertical="10dp"
                android:hint="행사 포스터"/>

            <ImageButton
                android:id="@+id/imgBtn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imageText"
                android:layout_alignBottom="@id/imageText"
                android:layout_alignParentEnd="true"
                android:background="@drawable/baseline_image_24"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/locateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feeText"
                android:layout_toStartOf="@id/mapBtn"
                android:hint="행사 장소"/>

            <ImageButton
                android:id="@+id/mapBtn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/locateText"
                android:layout_alignBottom="@id/locateText"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_baseline_location_on_24"
                tools:ignore="MissingConstraints" />



            <RadioGroup
                android:id="@+id/groupTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textTarget"
                android:layout_toEndOf="@id/textTarget"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/아무나"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아무나"/>
                <RadioButton
                    android:id="@+id/성인"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성인"/>
                <RadioButton
                    android:id="@+id/청년"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="청년"/>
                <RadioButton
                    android:id="@+id/어린이"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="어린이"/>
            </RadioGroup>

            <TextView
                android:id="@+id/textTarget"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_below="@id/timePicker"
                android:layout_marginTop="12dp"
                android:textColor="#000"
                android:text="대상" />

            <EditText
                android:id="@+id/feeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/groupTarget"
                android:inputType="number" />

            <TextView
                android:id="@+id/textFee"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_below="@id/groupTarget"
                android:text="요금"
                android:textColor="#000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:layout_below="@id/groupTarget"
                android:textSize="20dp"
                android:text="₩"
                android:textColor="#000" />

            <EditText
                android:id="@+id/contentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageText"
                android:layout_alignParentEnd="true"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:hint="게시물 내용을 작성해주세요"
                android:gravity="top"
                android:background="#eee"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
